  <article class="content casedata">
    <img class="content" src="/public/images/computer.png" alt="computer seen from above with code on screen" />
    <div class="datacontainer">
      <ul class="data">
        <li><h5>Case Name</h5></li>
        <li><p>Taxes & Efficiency</p></li>
      </ul>
      <ul class="data">
        <li><h5>Category</h5></li>
        <li><p>Business</p></li>
      </ul>
      <ul class="data">
        <li><h5>Date</h5></li>
        <li><p>27th September 2022</p></li>
      </ul>
      <Btn type="btn2" content="Live Preview" />
    </div>
  </article>
  <section class="content flow">
    <h2>Project Overview</h2>
