---
import Tag from "./Tag.astro";

Tag;
---

<section class="piechart-sect">
  <div class="content">
    <Tag tagContent="EXPERIENCE" color="white" />
    <div class="grid1-2">
      <div class="txtcontent">
        <h2>More than 25 years of experience</h2>
        <p>3000+ our clients are insured around the World</p>
      </div>
      <div class="piecharts">
        <slot />
      </div>
    </div>
  </div>

  <style>
    .piechart-sect {
      display: grid;
      grid-template-columns: subgrid;
      background-color: var(--color-primary-01);
      grid-column: full;
      .txtcontent p {
        color: var(--color-primary-03);
      }
      .piecharts {
        display: grid;
        gap: var(--space-s);
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      }
    }
  </style>
</section>
