---
import Btn from "./Btn.astro";
---

<div popover id="popovertarget">
  <h3>Dashboard Login</h3>

  <input placeholder="Enter Email" type="email" />
  <input placeholder="Enter Password" type="password" />
  <Btn type="btn2" content="Go to dashboard" />
</div>

<style>
  /*exit-style*/
  [popover] {
    opacity: 0;
    translate: 0 -100%;
    transition: 0.6s;
    transition-property: opacity, display, translate;
    transition-behavior: allow-discrete;

    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--color-primary-03);
    padding: var(--space-l) var(--space-3xl);
    border-radius: 20px;
    h3 {
      color: var(--color-secondary-02);
      margin-bottom: var(--space-s);
    }
    input {
      background: var(--color-secondary-02);
      margin-bottom: var(--space-s);
      font-size: var(--step--2);
      padding: var(--space-2xs);
      padding-left: 1.5rem;
      width: 100%;
      border-radius: 40px;
    }
  }

  /*entry-style*/
  :popover-open {
    @starting-style {
      opacity: 0;
      translate: 0 100%;
    }

    /*open-style*/
    opacity: 1;
    translate: 0 0;
    ::backdrop {
      filter: brightness(50%);
    }
  }

  :popover-open::backdrop {
    filter: brightness(50%);
  }
</style>
